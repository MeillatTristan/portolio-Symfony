{% extends 'template.html.twig' %}

{% block title %}Connexion | MEILLAT Tristan{% endblock %}

{% block body %}
<div class="containerSpace">
  <div class="containerConnexion">
    <div class="containerFormConnexion">
      <h2>Connexion</h2>
      {% if successMessage is defined %}
        <p class={{class}}>{{ successMessage }}</p>
      {% endif %}
      <form method="post">
        <input type="email" name="_username" id="inputEmail" class="form-control" autocomplete="email" required autofocus placeholder="Email">
        <input type="password" name="_password" id="inputPassword" class="form-control" autocomplete="current-password" required placeholder="Mot de passe">
        <input type="submit" value="Valider">
      </form>
      <p>Pas encore de compte ? <a href="/portfolio/inscription">Inscrivez vous maintenant</a></p>
    </div>
  </div>
</div>

{% endblock %}
