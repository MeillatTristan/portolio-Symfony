<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        <script src="https://kit.fontawesome.com/836a2159df.js" crossorigin="anonymous"></script>
        <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&amp;display=swap" rel="stylesheet">
        <link href="https://fonts.googleapis.com/css2?family=La+Belle+Aurore&amp;display=swap" rel="stylesheet">
        {% block stylesheets %}
          <link rel="stylesheet" href="{{ asset('/build/frontend.css') }}">
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('frontend') }}
        {% endblock %}
    </head>
    <body>

        <header>
    <nav id="header">
      <input type="checkbox" id="check">
      <label for="check" class="checkbtn">
        <i class="fas fa-bars"></i>
      </label>
      <label class="logo"><img src="/assets/images/logo.png" alt=""></label>
      <ul>
        <li><a class="firstLink" href="/">Accueil</a></li>
        <li><a class="secondLink" href="/posts">Projets</a></li>
        {% if app.user %}
          <li><a class="fourthLink" href="/logout">Déconnexion</a></li>
        {% else %}
          <li><a class="fourthLink" href="/connexion">Connexion</a></li>
        {% endif %}
      </ul>
    </nav>
  </header>
{# content #}
    <div class="containerGlobal">
      {% block body %}
      {% endblock %}
    </div>
  <footer>
    <div class="containerFooter">
      <div class="cardFooter">
        <img src="/assets/images/logo.png" alt="">
        <p>Copyright © 2021. All Rights Reserved MEILLAT Tristan.</p>
      </div>
      <div class="cardFooter">
        <h4>A propos</h4>
        <a href="/portfolio/mentions-legales">Mentions légal</a>
      </div>
      {% if session.user is defined %}
        {% if session.user.admin == 'y' %}
          <div class="cardFooter">
            <h4>Admin</h4>
            <a href="/portfolio/adminPosts">Accès à l'administration</a>
          </div>
        {% endif %}
      {% endif %}
    </div>
  </footer>
    </body>
</html>
