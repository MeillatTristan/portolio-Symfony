{% extends 'templateAdmin.html.twig' %}

{% block title %}Admin Page | MEILLAT Tristan{% endblock %}

{% block script %}<script src="assets/js/thumbmail.js"></script>{% endblock %}

{% block body %}

<div class="containerBlock">
  <h2>Ajouter un Article</h2>
  <form method="post" enctype="multipart/form-data">
  {{ form_start(form) }}
    <div class="containerFirstBlock">
      <div class="containerInput">
        {{ form_widget(form.Title) }}
      </div>
      <div class="thumbmail">
        {{ form_widget(form.imageFile) }}
      </div>
    </div>
    {{ form_widget(form.content) }}
    <input class ="validate" type="submit" value="Valider">
  {{ form_end(form) }}
</div>

<script src="public/assets/js/thumbmail.js"></script>

{% endblock %}
